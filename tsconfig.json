{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    /**
     * Typecheck JS in `.svelte` and `.js` files by default.
     * Disable checkJs if you'd like to use dynamic types in JS.
     * Note that setting allowJs false does not prevent the use
     * of JS in `.svelte` files.
     */
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "paths": {
      "$lib/*": ["./src/lib/*"],

      // "@library/icons/*": ["./src/packages/@library/assets/icons/*"],
      // "@library/ui/*": ["./src/packages/@library/components/*"],
      // "@library/typography/*": ["./src/packages/@library/components/*"],
      // "@library/forms/*": ["./src/packages/@library/components/*"],

      // "@features/*": ["./src/packages/@features/*"],
      // "@common/*": ["./src/packages/@common/*"]

      "@library/*": ["./src/packages/@library/*"],
      "@app/*": ["./src/packages/@app/*"],
      "@common/*": ["./src/packages/@common/*"],
      "@teams/*": ["./src/packages/@teams/*"],
      "@workspaces/*": ["./src/packages/@workspaces/*"],
      "@environments/*": ["./src/packages/@environments/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
